<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-medium"
        android:text="Registracija"
        android:textFontWeight="700"
        android:textSize="30sp"
        tools:ignore="HardcodedText"
        tools:targetApi="p" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:width="20dp"
                android:autofillHints="name"
                android:hint="Ime"
                android:inputType="text"
                android:minWidth="100sp"
                android:textColorHint="#8D6E63"
                tools:ignore="Autofill,HardcodedText,TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/last_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autofillHints="name"
                android:hint="Priimek"
                android:inputType="text"
                android:minWidth="150sp"
                android:textColorHint="#8D6E63"
                tools:ignore="HardcodedText,TouchTargetSizeCheck" />

        </LinearLayout>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:width="150dp"
            android:autofillHints="emailAddress"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:textColorHint="#8D6E63"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Geslo"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColorHint="#8D6E63"
            tools:ignore="Autofill,HardcodedText" />

        <EditText
            android:id="@+id/repeat_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ponovi Geslo"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColorHint="#8D6E63"
            tools:ignore="Autofill,HardcodedText" />

        <TextView
            android:id="@+id/text_input_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F84040"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nazaj"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="30dp"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/registriraj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registriraj"
                android:layout_marginTop="30dp"
                tools:ignore="ButtonStyle,HardcodedText" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>